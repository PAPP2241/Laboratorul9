<Window x:Class="AppMinimMaxim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppMinimMaxim"
        mc:Ignorable="d"
        Title="Analiza cifrelor" Height="300" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:DigitAnalyzer x:Key="Logic"/>
    </Window.Resources>
    <Grid Margin="20" DataContext="{StaticResource Logic}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Introduceti un numar:"
                   FontWeight="Bold"
                   FontSize="20"/>
        <TextBox Grid.Row="2"
                 FontSize="20"
                 Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="txtBox_PreviewTextInput"
                 HorizontalAlignment="Stretch"/>
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="0 12 0 0"
                    HorizontalAlignment="Center">
            <Button Content="Maxim"
                    FontSize="20"
                    Padding="5"
                    Width="120"
                    Margin="10"
                    Click="Maxim_Click"/>
            <Button Content="Minim"
                    FontSize="20"
                    Padding="5"
                    Width="120"
                    Margin="10"
                    Click="Minim_Click"/>

        </StackPanel>

        <Border Grid.Row="5"
                Padding="10"
                Background="DarkBlue"
                BorderBrush="LightBlue"
                BorderThickness="1">
            <TextBlock Text="{Binding ResultText}"
                       FontSize="20"
                       Foreground="White"
                       TextAlignment="Center"/>

        </Border>

    </Grid>
</Window>
